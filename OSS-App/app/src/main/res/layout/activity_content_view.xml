<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/previous1"
            android:layout_width="310dp"
            android:layout_height="90dp"
            android:background="#00FFFFFF"
            android:onClick="previous" />

        <Button
            android:id="@+id/camera"
            android:layout_width="50dp"
            android:layout_height="90dp"
            android:layout_toRightOf="@id/previous1"
            android:background="#00FFFFFF"
            android:gravity="left|bottom"
            android:onClick="camera"
            android:text="ㅁ"
            android:textColor="#FF000000"
            android:textSize="35dp"
            android:visibility="gone" />

        <Button
            android:id="@+id/setting"
            android:layout_width="55dp"
            android:layout_height="90dp"
            android:layout_alignParentRight="true"
            android:layout_gravity="top|right"
            android:background="#00FFFFFF"
            android:gravity="left|bottom"
            android:onClick="setting"
            android:text="⋮"
            android:textSize="35dp" />

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/vpPager"
            android:layout_width="match_parent"
            android:layout_height="640dp"
            android:layout_alignParentBottom="true"></androidx.viewpager.widget.ViewPager>

        <TextView
            android:id="@+id/t"
            android:layout_width="20dp"
            android:layout_height="400dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:background="#00ffffff" />

        <TextView
            android:id="@+id/b"
            android:layout_width="400dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:background="#00ffffff" />
    </RelativeLayout>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_gravity="bottom|end"
            android:layout_marginRight="15sp"
            android:layout_marginBottom="235dp"
            android:layout_toLeftOf="@+id/t"
            android:onClick="fab3_tts"
            android:visibility="invisible"
            app:backgroundTint="#ffffff"
            app:elevation="6dp"
            app:pressedTranslationZ="12dp" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_gravity="bottom|end"
            android:layout_marginRight="15sp"
            android:layout_marginBottom="165dp"
            android:layout_toLeftOf="@+id/t"
            android:onClick="fab2_viewmode"
            android:visibility="invisible"
            app:backgroundTint="#ffffff"
            app:elevation="6dp"
            app:pressedTranslationZ="12dp" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_gravity="bottom|end"
            android:layout_marginRight="15sp"
            android:layout_marginBottom="95dp"
            android:layout_toLeftOf="@+id/t"
            android:onClick="fab1_controlmode"
            android:visibility="invisible"
            app:backgroundTint="#ffffff"
            app:elevation="6dp"
            app:pressedTranslationZ="12dp" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/b"
            android:layout_gravity="bottom|end"
            android:layout_margin="15sp"
            android:layout_toLeftOf="@+id/t"
            android:backgroundTint="#9500ff"
            android:onClick="fab" />
    </androidx.coordinatorlayout.widget.CoordinatorLayout>

    <com.example.oss_app.PointView
        android:id="@+id/view_point"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.example.oss_app.CalibrationViewer
        android:id="@+id/view_calibration"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="invisible" />
</androidx.constraintlayout.widget.ConstraintLayout>

