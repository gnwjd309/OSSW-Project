<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    tools:context=".Sign_up">

    <EditText
        android:id="@+id/enter_id"
        android:layout_width="190dp"
        android:layout_height="60dp"
        android:hint="Enter your ID"/>

    <TextView
        android:id="@+id/check_state"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_marginLeft="-18dp"
        android:layout_toRightOf="@id/enter_id"
        android:textSize="15dp"
        android:textColor="#75BC00" />

    <Button
        android:id="@+id/check_id"
        android:layout_toRightOf="@+id/enter_id"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="#00ff0000"
        android:textSize="12dp"
        android:text="Check" />

    <EditText
        android:id="@+id/enter_name"
        android:layout_below="@+id/enter_id"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:hint="Enter your Name" />

    <EditText
        android:id="@+id/enter_pw"
        android:layout_below="@+id/enter_name"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:hint="Enter your Password" />

    <EditText
        android:id="@+id/enter_pw2"
        android:layout_below="@+id/enter_pw"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:hint="Enter your Password" />

    <Button
        android:id="@+id/sign_up"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:layout_below="@+id/enter_pw2"
        android:layout_marginTop="0dp"
        android:background="#00ff0000"
        android:text="Sign up" />

</RelativeLayout>